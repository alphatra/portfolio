---
import Layout from '../layouts/Layout.astro';
import { Home, ArrowLeft } from 'lucide-react';
---

<Layout title="404 - Page Not Found">
  <div class="min-h-[60vh] flex flex-col items-center justify-center text-center px-4">
    <h1 class="text-6xl md:text-8xl font-bold text-foreground mb-4">
      404
    </h1>
    <p class="text-xl md:text-2xl text-muted-foreground mb-8">
      Oops! The page you're looking for doesn't seem to exist.
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4">
      <a 
        href="/"
        class="inline-flex items-center justify-center px-6 py-3 border border-border bg-background hover:bg-secondary text-foreground text-sm font-medium rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
      >
        <Home class="w-4 h-4 mr-2" />
        Go Home
      </a>
      <button 
        onclick="window.history.back()"
        class="inline-flex items-center justify-center px-6 py-3 border border-transparent bg-primary text-primary-foreground hover:bg-primary/90 text-sm font-medium rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
      >
        <ArrowLeft class="w-4 h-4 mr-2" />
        Go Back
      </button>
    </div>
  </div>
</Layout>

<style>
  /* Minimalistyczne style, jeśli potrzebne dodatkowo do Tailwind */
  /* (prawdopodobnie nie będą potrzebne, bo używamy utility classes) */
</style> 