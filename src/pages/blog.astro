---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { NeonGradientCard } from '../components/magicui/neon-gradient-card'; // Import Magic UI Card

// Pobierz wszystkie wpisy, sortuj od najnowszych
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Funkcja formatująca datę
const formatDate = (date: Date) => {
  return date.toLocaleDateString('pl-PL', { // Użyj polskiego formatu
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---
<Layout title="Blog - Gracjan" description="Najnowsze wpisy na blogu Gracjana Ziemiańskiego.">
  <div class="container mx-auto px-4 py-16">
    <h1 id="page-heading" tabindex="-1" class="text-4xl md:text-5xl font-bold mb-12 text-center text-foreground">
      <span class="y2k-header">Blog</span>
    </h1>

    {posts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <a href={`/blog/${post.slug}/`} class="block group focus:outline-none focus:ring-2 focus:ring-accent focus:rounded-lg">
            <NeonGradientCard
              className="flex flex-col h-full p-6 cursor-pointer transition-transform duration-300 group-hover:scale-[1.02]"
              borderRadius={10}
              neonColors={{ firstColor: '#a259ff', secondColor: '#ff7a9b' }} // Dopasuj kolory do stylu
            >
              <div class="flex-grow">
                {post.data.heroImage && (
                  <img 
                    src={post.data.heroImage}
                    alt="" 
                    class="w-full h-40 object-cover rounded-md mb-4 border border-border/20"
                    loading="lazy"
                  />
                )}
                <h2 class="text-xl font-semibold mb-2 text-foreground group-hover:text-accent transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-sm text-muted-foreground mb-3">
                  {formatDate(post.data.pubDate)}
                </p>
                <p class="text-sm text-foreground/80 line-clamp-3">
                  {post.data.description}
                </p>
              </div>
              <div class="mt-4 text-right">
                <span class="text-xs font-semibold text-accent group-hover:underline">
                  Czytaj dalej →
                </span>
              </div>
            </NeonGradientCard>
          </a>
        ))}
      </div>
    ) : (
      <p class="text-center text-muted-foreground">Na razie brak wpisów na blogu.</p>
    )}
  </div>
</Layout>

<style>
  .y2k-header {
    display: inline-block;
    /* Subtelny efekt Y2K dla nagłówka */
    position: relative;
    color: var(--foreground);
  }
  .y2k-header::before {
    content: 'Blog';
    position: absolute;
    left: 2px;
    top: 2px;
    color: var(--accent);
    opacity: 0.5;
    z-index: -1;
    filter: blur(1px);
  }

  /* Opcjonalnie: subtelny gradient tła dla całej sekcji */
  .container {
    /* background: radial-gradient(circle at top left, rgba(162, 89, 255, 0.05), transparent 40%); */
  }
</style> 