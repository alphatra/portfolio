---import '../styles/global.css';
import Navbar from '../components/Navbar.tsx'; // Restore Navbar import
// import DockNav from '../components/DockNav.tsx'; // Remove DockNav import
import Footer from '../components/Footer.tsx';
import { ViewTransitions } from 'astro:transitions';
import { Analytics } from '@vercel/analytics/astro'; // Dodano import Analytics

interface Props {
	title: string;
}

const { title } = Astro.props;---

<!doctype html>
<html lang="en" class="dark h-full bg-background text-foreground">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="relative h-full font-sans flex flex-col">
		{/* Restore original header with Navbar */}
		<header role="banner">
			<Navbar client:load />
		</header>
		
		{/* Skip link for keyboard navigation - visually hidden until focused */}
		<a href="#main-content" class="skip-link sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-50 focus:bg-background focus:text-foreground focus:px-4 focus:py-2 focus:rounded">Skip to main content</a>
		
		{/* Remove DockNav container */}
		{/* 
		<div class="fixed top-4 left-1/2 -translate-x-1/2 max-w-xl w-[90%] z-50">
			<DockNav client:load />
		</div> 
		*/}

		<main id="main-content" role="main" class="flex-grow pt-16"> {/* Restore original padding pt-16 */}
			<slot />
		</main>
		
		<footer role="contentinfo"> {/* Wrap Footer in footer tag */}
			<Footer client:load />
		</footer>

		<Analytics /> {/* Dodano komponent Analytics */}
	</body>
</html>

<style is:global>
	/* Import Inter font */
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');
	
	html {
		scroll-behavior: smooth;
		font-family: 'Inter', sans-serif; /* Set default font */
	}

	/* Apply font smoothing */
	body {
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	/* Add any global styles here if needed, beyond Tailwind */
	/* Example: Smooth scrolling */
	html {
		scroll-behavior: smooth;
	}

	/* Styles for visually hidden elements (accessibility) */
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}

	.focus\:not-sr-only:focus {
		position: static;
		width: auto;
		height: auto;
		padding: 0;
		margin: 0;
		overflow: visible;
		clip: auto;
		white-space: normal;
	}
</style>
